{
	"root": true,
	"env": {
		"browser": true,
		// "es2021": true,
		"node": true
	},
	"ignorePatterns": [ "**/dist/*.js" ],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"space-before-blocks": "warn",
		"comma-spacing": [
			"warn",
			{
				"before": false,
				"after": true
			}
		],
		"keyword-spacing": [
			"warn",
			{
				"before": true,
				"after": true
			}
		],
		"array-bracket-spacing": [
			"warn",
			"always"
		],
		"block-spacing": [
			"warn",
			"always"
		],
		"object-curly-spacing": [
			"warn",
			"always"
		],
		"space-in-parens": [
			"warn",
			"always"
		],
		"@typescript-eslint/type-annotation-spacing": [
			"warn", {
				"before": true,
				"after": true
			}
		],
		"indent": [2, "tab"],
        "no-tabs": 0,
		// "indent": [
		// 	"error",
		// 	"tab"
		// ],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
