{
	"name": "VIM typer",
	"version": "1.1.0",
	"description": "Use VIM keys in browser",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*",
				"file://*/*"
			],
			"js": [
				"./plugin.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"commands": {
		"toggle-vim-mode": {
			"suggested_key": {
				"default": "Alt+V",
				"mac": "Command+MacCtrl+V"
			},
			"description": "Toggle plugin activation."
		}
	},
	"background": {
		"service_worker": "worker.js",
		"type": "module"
	}
}
